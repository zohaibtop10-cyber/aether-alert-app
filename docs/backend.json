{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user profile information, including preferences and health conditions.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "User's full name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "User's email address."
        },
        "location": {
          "type": "object",
          "description": "User's preferred location.",
          "properties": {
            "lat": { "type": "number" },
            "lon": { "type": "number" },
            "city": { "type": "string" },
            "country": { "type": "string" }
          }
        },
        "healthConditions": {
          "type": "string",
          "description": "Any health conditions the user has specified, e.g., 'asthma'."
        },
        "deviceToken": {
            "type": "string",
            "description": "FCM device token for push notifications."
        }
      },
      "required": ["email"]
    },
    "ChatHistory": {
      "title": "Chat History",
      "description": "Represents a single message in a chat session with EcoBot.",
      "type": "object",
      "properties": {
        "role": {
          "type": "string",
          "enum": ["user", "model"],
          "description": "Who sent the message."
        },
        "content": {
          "type": "string",
          "description": "The text content of the message."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "When the message was sent."
        }
      },
      "required": ["role", "content", "timestamp"]
    },
    "Alert": {
      "title": "Alert",
      "description": "Represents a health or environmental alert sent to a user.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The ID of the user who received the alert."
        },
        "message": {
          "type": "string",
          "description": "The content of the alert message."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the alert was generated."
        }
      },
      "required": ["uid", "message", "createdAt"]
    },
    "Event": {
      "title": "Event",
      "description": "A community event, like a cleanup or a workshop.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "description": { "type": "string" },
        "location": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "organizerId": { "type": "string" },
        "organizerName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["title", "description", "location", "date", "organizerId", "createdAt"]
    },
    "Post": {
      "title": "Post",
      "description": "A general community post.",
      "type": "object",
      "properties": {
        "content": { "type": "string" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["content", "authorId", "createdAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{uid}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profile information for each user."
    },
    "/users/{uid}/chatHistory/{messageId}": {
      "schema": { "$ref": "#/entities/ChatHistory" },
      "description": "Stores the chat history for each user with the EcoBot assistant."
    },
    "/alerts/{alertId}": {
      "schema": { "$ref": "#/entities/Alert" },
      "description": "Stores all alerts generated for all users."
    },
    "/events/{eventId}": {
      "schema": { "$ref": "#/entities/Event" },
      "description": "Collection of all community events."
    },
    "/posts/{postId}": {
      "schema": { "$ref": "#/entities/Post" },
      "description": "Collection of all community posts."
    }
  }
}
